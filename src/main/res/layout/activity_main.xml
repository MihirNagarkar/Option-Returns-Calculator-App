<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d2a50"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option Returns Calculator"
        android:textSize="24sp"
        android:textColor="#2CF69E"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>

    <Button
        android:id="@+id/buttonStockPrice"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:text="Stock Price"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/learnmore_tv"
        android:layout_below="@id/buttonOther1"
        android:layout_centerHorizontal="true"
        android:text="Learning Corner"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:id="@+id/buttonLearn"
        android:layout_width="187dp"
        android:layout_height="127dp"
        android:layout_below="@id/learnmore_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="95dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Learn"
        android:src="@drawable/img_4"/>

    <Button
        android:id="@+id/buttonOther1"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonStockPrice"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:text="Option"
        android:textSize="18dp"
        android:textStyle="bold" />

    <!--<Button
        android:id="@+id/buttonOther2"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Button 2"
        android:layout_below="@id/buttonOther1"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="18dp"/>-->
</RelativeLayout>
